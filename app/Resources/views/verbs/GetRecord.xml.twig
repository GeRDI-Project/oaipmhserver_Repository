{% extends 'base.xml.twig' %}
{% block payload %}
  <GetRecord>
   <record> 
    <header>
      <identifier>{{ params.identifier }}</identifier> 
      <datestamp>{{ record.item.timestamp | date('Y-m-d\\Th:m:s\\Z', 'utc')  }}</datestamp>
    </header>
    <metadata>
        {{ record.xml | raw }}
    </metadata>
  </record>
 </GetRecord>
{% endblock %}
